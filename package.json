{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "5.2.3"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": "=18.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.5.1",
  "scripts": {
    "compose:aggregate:build": "docker compose -f Dockerfiles/aggregate/docker-compose.yml build",
    "compose:aggregate:console": "docker compose -f Dockerfiles/aggregate/docker-compose.yml run --rm console /bin/bash",
    "compose:aggregate:db-setup": "docker compose -f Dockerfiles/aggregate/docker-compose.yml build",
    "compose:aggregate:down": "docker compose -f Dockerfiles/aggregate/docker-compose.yml down -v",
    "compose:aggregate:run": "docker compose -f Dockerfiles/aggregate/docker-compose.yml up"
  }
}
